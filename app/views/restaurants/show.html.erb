<nav class="navbar navbar-light bg-light">
  <%= link_to "Yelp Reviews", restaurants_path, class: 'navbar-brand' %>
  <%= link_to "New Restaurant", new_restaurant_path %>
</nav>

<div class="container">
  <div>
    <h3><%= @restaurant.name %></h3>
  </div>
  <p>Address: <%= @restaurant.address %></p>
  <p>Phone Number: <%= @restaurant.phone_number %></p>
  <p>Category: <%= @restaurant.category %></p>

  <h4>Reviews: </h4>
  <p><% @restaurant.reviews.each do |review| %></p>
  <%= review.content %>
  <%= review.rating %>
  <% end %>
  <div>
    <button type="button" class="btn btn-outline-primary my-2"><%= link_to "Add a review", new_restaurant_review_path(@restaurant)  %></button>
    <button type="button" class="btn btn-outline-primary my-2"><%= link_to "Back", restaurants_path %></button>
  </div>
</div>
